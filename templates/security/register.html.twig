{% extends 'base.html.twig' %}
{% block title %}Inscription!{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5 pb-5">
        <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
            {{form_start(formulaire, {'attr':{'novalidate':'novalidate'}})}}
            <div class="form-group">
                {{form_label(formulaire.nom, "Nom : ")}}
                {{form_widget(formulaire.nom, {'attr':{'class':'form-control', 'aria-describedby':'emailHelp', 'placeholder':'Votre nom'}})}}
            </div>
            <div class="form-group">
                {{form_label(formulaire.prenom, "Prénom : ")}}
                {{form_widget(formulaire.prenom, {'attr':{'class':'form-control', 'aria-describedby':'emailHelp', 'placeholder':'Votre prenom'}})}}
            </div>
            <div class="form-group">
                {{form_label(formulaire.email, "Email : ")}}
                {{form_widget(formulaire.email, {'attr':{'class':'form-control', 'aria-describedby':'emailHelp', 'placeholder':'Votre email'}})}}
            </div>
            <div class="form-group">
                {{form_label(formulaire.password, "Mot de passe : ")}}
                {{form_widget(formulaire.password, {'attr':{'class':'form-control', 'type':'password', 'aria-describedby':'emailHelp'}})}}
            </div>
            <div class="form-group">
                {{form_label(formulaire.phone, "Numéro de téléphone : ")}}
                {{form_widget(formulaire.phone, {'attr':{'class':'form-control', 'aria-describedby':'emailHelp', 'placeholder':'06 34 05 67 56'}})}}
            </div>
             {{form_widget(formulaire.save, {'attr':{'class':'btn btn-primary float-right', 'type':'submit'}})}}
            {{form_rest(formulaire)}}
            {{form_end(formulaire)}}
    </div>
{% endblock %}